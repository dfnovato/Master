}
.abslt-text span {
    background: none repeat scroll 0 0 #f5f5f5;
    border: 1px solid #e1e1e1;
    border-radius: 10px;
    font-size: 12px;
    padding: 1px 10px 2px;
}
.uploaded-img a
{
	color:#555;
	text-decoration:none;
}
