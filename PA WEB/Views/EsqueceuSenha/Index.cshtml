@model PA.Web.Models.LoginMOD

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_Vazio.cshtml";
}

<style>
    .form-signin {
        margin: 0 auto;
        max-width: 430px;
        padding: 15px;
    }
</style>

<script type='text/javascript' src='~/Content/JS/jquery.particleground.js'></script>
<script type='text/javascript' src='~/Content/JS/demo.js'></script>
<div id="particles"  style="background-color:darkolivegreen;">
<div id="intro" >
    <div class="modal-dialog" style="margin-top:-48%;">
        <div class="modal-content" >
            <div class="container ">
                @*Ou programa em HTML PURO ou utilize os HTML HELPERS
            HELPERS são formas elegantes de gerar HTML a partir
            de código em Visual C#*@
                @*BeginForm vai gerar uma tag <FORM> e dentro dele
            passamos 3 parametro
            Nome da action, Nome do Controller e o tipo de envio*@

                @using (Ajax.BeginForm("EnviarEmail", "Login", FormMethod.Post,
new AjaxOptions
{
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "POST",
    UpdateTargetId = "container"
}))
                {
                  
                    <div class="col-md-6">
                        <h2 class="form-signin-heading" style="text-align:center;">
                            <span>
                                @*<img width="50%" src="~/Content/images/logo.png" />*@
                                <img width="30%" src="~/Content/images/logoTransparecia.png" />
                            </span>
                        </h2>
                        <hr />
                        <div class="row">
                            <div class="col-lg-12" style="align-content:space-around; ">
                                <h1 class="page-header" style="align-content:center; font-family:Calibri;  text-align:center; border-radius:9px;color:#ED6C94;text-decoration:double; ">
                                    Projeto Afeto

                                </h1>
                                <h4 class="page-header" style="align-content:center; font-family:Calibri;  text-align:center; border-radius:9px;color:#ED6C94; ">Redefinir Senha: </h4>
                                <h6  style="align-content:center; font-family:Calibri;  text-align:center; border-radius:9px;color:#ED6C94; ">Você vai receber um email, para alteração de senha. </h6>
                            </div>
                        </div>
                        <br />
                        @Html.LabelFor(x => x.Email)
                        <div class="input-group">
                            <span class="input-group-addon" id="basic-addon1"><span class="fa  fa-user fa-fw" aria-hidden="true"></span></span>
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Digite aqui seu e-mail para recuperação da senha." })
                            @Html.ValidationMessageFor(x => x.Email)
                        </div>
                        <br />

                        <br />
                        <div class="modal-footer">
                            <input type="reset"
                                   name="limpar"
                                   value="Limpar" class="btn btn-default" />
                            <input type="submit"
                                   name="cadastrar"
                                   value="Enviar" class="btn btn-success" />
                        </div>
                    </div>
                }
            </div>

    </div>

</div>

    </div>
    <!-- /.container-fluid -->
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

