@model PA.Web.Models.MeuProgramaMOD
@{
    ViewBag.Title = "Listar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Corpo Detalhe -->
<div class="row">
    <div class="col-lg-12">

        <div class="panel panel-default ">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-3">
                            <i class="glyphicon glyphicon-folder-open fa-5x"></i>
                        </div>
                        <div class="col-xs-9 text-right ">

                            <div style="vertical-align: middle; font-family:Calibri;   border-radius:9px;font-size:x-large; ">Meus Programas</div>
                        </div>
                    </div>
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dtPadrao">
                            <thead>
                                <tr>
                                    <th>Codigo</th>
                                    <th>Programa</th>
                                    <th>Disponibilização</th>
                                    <th>Modalidade</th>
                                    <th>Situação</th>
                                    <th>UF</th>
                           @*         <th>Cidade</th>*@
                                    <th>Visualizar</th>
                                    <th>Detalhamento</th>
                                    <th>Resultado</th>
                                    <th>Rank</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var Programa in Model.lstMeuProgramaMOD)
                                {
                                    <tr>
                                        <td align="justify">@Programa.CODPROGRAMA</td>
                                        <td align="justify">@Programa.NOMEPROGRAMA</td>
                                        <td align="justify">@Programa.DATADISPONIBILIZACAO</td>
                                        <td align="justify">@Programa.MODALIDADEPROGRAMA</td>

                                        <td align="justify">@Programa.SITPROGRAMA</td>

                                        <td align="justify">@Programa.UFPROGRAMA</td>
                                        @*<td align="justify">@Programa.MUNICPROPONENTE</td>*@
                                        <td width="10%" align="center">
                                            <button class="btn btn-primary edit bg-warning" data-container="@Programa" data-bind="@Programa" data-id="@Programa.IDPROGRAMA">
                                                <i class="glyphicon glyphicon-search"></i>

                                            </button>

                                        </td>
                                        <td width="10%" align="center">
                                            <p>
                                                <a href="https://www.convenios.gov.br/siconv/ListarProgramasProposta/ProgramasDaPropostaDetalhar.do?id=@Programa.IDPROGRAMA&Usr=guest&&Pwd=guest" class="btn btn-warning  bg-warning" target="_blank"> Detalhar - Sicov</a>
                                            </p>

                                        </td>

                                        <td width="10%" align="center">
                                            <p>
                                                <a href="https://www.convenios.gov.br/siconv/ListarProgramasProposta/ProgramasDaPropostaDetalhar.do?id=@Programa.IDPROGRAMA&Usr=guest&amp&Pwd=guest" class="btn btn-success  bg-success" target="_blank"> Resultado - Sicov</a>
                                            </p>

                                        </td>

                                        <td width="10%" align="center">
                                            <button class="btn btn-primary rankprograma bg-warning" data-container="@Programa" data-bind="@Programa" data-id="@Programa.IDPROGRAMA">
                                                <i class="glyphicon glyphicon-certificate"></i>

                                            </button>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
 </div> 
    <!-- FIM  Modal CADASTRAR-->
    @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {

                alert("@ViewBag.Message");

        };
        </script>
    }

    <script>


    $('#product-table a:first').tab('show');


    $(document).ready(function () {
        $('#dtPadrao').dataTable({
            "aLengthMenu": [[8, 50, 75, -1], [8, 50, 75, "Todos"]],
            "iDisplayLength": 8
        });
    });

    $(function () {
        $(".add").click(function () {

            $("#modalCadastrar").modal();



        });
    })





    $(".edit").click(function () {
        var id = $(this).attr("data-id");

        $("#modalEditar").load("TEdit?ID_PROGRAMA=" + id, function () {

            $("#modalEditar").modal();


        })
    });


    $(".rankprograma").click(function () {
        var id = $(this).attr("data-id");

        $("#modalRankearPrograma").load("TRankPrograma?ID_PROGRAMA=" + id, function () {

            $("#modalRankearPrograma").modal();


        })
    });

    $(".delete").click(function () {
        var id = $(this).attr("data-id");

        $("#modalDeletar").load("TDelete?id=" + id, function () {

            $("#modalDeletar").modal();


        })
    });


    </script>
