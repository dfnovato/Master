@model PA.Web.Models.LoginMOD

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout_Vazio.cshtml";
}

<style>
    .form-signin {
        margin: 0 auto;
        max-width: 530px;
        padding: 15px;
    }
</style>

<script type='text/javascript' src='~/Content/JS/jquery.particleground.js'></script>
<script type='text/javascript' src='~/Content/JS/demo.js'></script>
<div id="particles"  style="background-color:dimgray;">
<div id="intro" >
    <div class="modal-dialog" style="margin-top:-43.5%;">
        <div class="modal-content">
            <div class="container-fluid">
                <!-- Page Heading -->
                <!-- /.row -->
                @using (Html.BeginForm("Logar", "Login", FormMethod.Post, new { @class = "form-signin", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h2 class="form-signin-heading" style="text-align:center;">
                        <span>
                            @*<img width="50%" src="~/Content/images/logo.png" />*@
                            <img width="80%" src="~/Content/images/logoTransparecia.png" />
                        </span>
                    </h2>
                    <hr />
                    <div class="row">
                        <div class="col-lg-12" style="align-content:space-around; ">

                            <h4 class="page-header" style="align-content:center; font-family:Calibri;  text-align:center; border-radius:9px;color:#000066; ">Sistema Gestão de Cuidador de Idosos</h4>
                        </div>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control", placeholder = "Login" })
                    @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "text-danger" })
                    <br />
                    @Html.PasswordFor(m => m.Senha, new { @class = "form-control", placeholder = "Senha" })
                    @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })

                    <br />
                    <br />
                    <br />
                    <input type="submit" value="Logar" class="btn btn-lg btn-primary btn-block" style="background-color:#ED6C94;" />
                    <br />
                    <div style="align-content:center;text-align:center;">

                        @Html.ActionLink("Esqueceu a senha?", "Index", "EsqueceuSenha")

                        <br />

                        <br />

                    </div>
                    <h6 class="panel-footer" style="align-content:center; font-family:Calibri;  text-align:center; border-radius:9px;color:#000066; ">- Desenvolvido pela Zenerd - Soluções em TI - Versão 2.0.0.3</h6>

                }
            </div>


        </div>

</div>

    </div>
    <!-- /.container-fluid -->
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

